<h1>Your Account info</h1>
<div class="form">
<form method="post">
<table>
		<td>Email</td>
		<td><input name="email" disabled="true" value="<%= @current_user.email %>"></td>
	</tr>
	<tr>
		<td>Username</td>
		<td><input name="uname" value="<%= @current_user.uname %>"></td>
	</tr>
	<tr>
		<td>Current Password</td>
		<td><input type="password" name="password"> </td>
	</tr>
	<tr>
		<td colspan="2"><input type="submit" value="Update Profile">
	</tr>
</table>
</form>
</div>